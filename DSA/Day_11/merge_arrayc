//write a program to merge two array in single sorted array

#include<stdio.h>
void mergeAndSort(int a[], int n1, int b[], int n2, int result[]) {
    int i=0, j=0, k=0;
    //merge the two arrays
    while(i<n1 && j<n2){
        if (a[i]<b[j]){
            result[k++]= a[i++];
        }
        else{
            result[k++]= b[j++];
        }
    }
    while(i<n1){
        result[k++]= a[i++];
    }
    while (j<n2){
        result[k++]= b[j++];
    }
}
int main(){
    int a[]={1, 3, 5,7};
    int b[]={2, 4, 6, 8};
    int n1 = sizeof(a)/ sizeof(a[0]);           //number of elements(4)*int(4 bytes)/int(4 bytes)= 4 size of array(a)
    int n2=sizeof(b)/ sizeof(b[0]);             //
    int result[n1 + n2]; 
    mergeAndSort(a, n1, b, n2, result);
    printf("Merged Sorted Array: ");
    for (int i = 0; i < n1 + n2; i++) {
        printf("%d ", result[i]);
    }
}